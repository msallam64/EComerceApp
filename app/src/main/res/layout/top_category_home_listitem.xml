<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000"
    app:cardCornerRadius="10dp"
    app:cardElevation="5dp"
    android:layout_margin="5dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/imageview_top_category_listitem"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@mipmap/ic_launcher" />

        <TextView
            android:id="@+id/tv_top_category_listitem"
            android:layout_width="180dp"
            android:layout_height="75dp"
            android:layout_marginStart="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginBottom="8dp"
            android:background="@drawable/text_border"
            android:gravity="center"
            android:text="Holder"
            android:textStyle="bold"
            android:textColor="#FFF"
            app:layout_constraintBottom_toBottomOf="@+id/imageview_top_category_listitem"
            app:layout_constraintEnd_toEndOf="@+id/imageview_top_category_listitem"
            app:layout_constraintStart_toStartOf="@+id/imageview_top_category_listitem"
            app:layout_constraintTop_toTopOf="@+id/imageview_top_category_listitem" />
    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.cardview.widget.CardView>